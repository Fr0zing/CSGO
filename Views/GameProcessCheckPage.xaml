<Page x:Class="CSGOCheatDetector.Views.GameProcessCheckPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="GameProcessCheckPage">

    <Grid Margin="10">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Запустить SystemInformer" Click="ButtonLaunchSystemInformer_Click" Margin="10" Width="200"/>
            <Button Content="Автонажатие нескольких клавиш" Click="ButtonAutoKeyPressMultiple_Click" Margin="10" Width="200"/>
            <TextBlock x:Name="InfoTextBlock" Text="Информация будет отображаться здесь" Margin="10" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>
