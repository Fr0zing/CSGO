<Window x:Class="CSGOCheatDetector.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StartupWindow" Height="250" Width="450"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">
    <Border CornerRadius="20" Background="White" Margin="0" ClipToBounds="True">
        <Border.Clip>
            <RectangleGeometry Rect="0,0,450,250" RadiusX="20" RadiusY="20" />
        </Border.Clip>
        <Grid Margin="0">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Name="statusLabel1" Text="Пожалуйста, запросите доступ." HorizontalAlignment="Center" FontSize="16"/>
                <Button Name="requestAccessButton" Content="Запросить доступ" Width="200" Height="40" Margin="0,20,0,0" Click="RequestAccessButton_Click"/>
                <TextBlock Name="statusLabel2" Text="" HorizontalAlignment="Center" FontSize="16" Margin="10,10,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
